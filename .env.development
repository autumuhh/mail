# Flask server config
FLASK_HOST = "127.0.0.1"
FLASK_PORT = 5000

# SMTP server config
SMTP_HOST = "127.0.0.1"
SMTP_PORT = 25

# File config
INBOX_FILE_NAME = "inbox.json"
MAX_INBOX_SIZE = 100000000  # 100MB

# Database config
DATABASE_PATH = "data/mailbox.db"  # SQLite database path
USE_DATABASE = true  # Enable database storage

# Email + admin
PROTECTED_ADDRESSES = "^admin.*"
PASSWORD = "admin123"
DOMAINS = "localhost,127.0.0.1,test.local"  # 支持多域名，逗号分隔
DOMAIN = "localhost"  # 默认域名

# Retention
EMAIL_RETENTION_DAYS = 7
MAX_EMAILS_PER_ADDRESS = 50

# Mailbox lifecycle
MAILBOX_RETENTION_DAYS = 30

# IP whitelist (开发环境允许本地访问)
ENABLE_IP_WHITELIST = false
IP_WHITELIST = "127.0.0.1,::1,192.168.0.0/16,10.0.0.0/8"

# Sender whitelist
ENABLE_SENDER_WHITELIST = true
