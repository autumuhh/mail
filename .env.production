# Flask server config
FLASK_HOST = "0.0.0.0"
FLASK_PORT = 5000

# SMTP server config (run on 2525 inside container; host maps 25:2525)
SMTP_HOST = "0.0.0.0"
SMTP_PORT = 25

# File config
INBOX_FILE_NAME = "/app/data/inbox.json"  # Persisted by docker-compose volume
MAX_INBOX_SIZE = 100000000  # 100MB

# Database config
DATABASE_PATH = "/app/data/mailbox.db"  # SQLite database path
USE_DATABASE = true  # Enable database storage

# Email + admin
PROTECTED_ADDRESSES = "^admin.*"
PASSWORD = "admin123"      # 管理员密码
DOMAIN = "180.149.32.168"         # 使用你的服务器IP地址

# Retention
# Choose one of the following: seconds (testing) or days (production)
# EMAIL_RETENTION_SECONDS = 10
EMAIL_RETENTION_DAYS = 7
MAX_EMAILS_PER_ADDRESS = 50

# IP whitelist (protect API and SMTP)
# For receiving emails from the Internet, set to false (recommended).
ENABLE_IP_WHITELIST = false
IP_WHITELIST = "127.0.0.1,::1,192.168.0.0/16,10.0.0.0/8"

# Mailbox lifecycle
MAILBOX_RETENTION_DAYS = 30
ENABLE_SENDER_WHITELIST = true
